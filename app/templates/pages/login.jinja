{#=====================================================
    Sign up page for adding a new user
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo - Log In 

{% endblock %}


{% block content %}

    <article>

        <h3>Log in</h3>

        <form action="/login-user" method="POST">

            <input
                type="text"
                name="username"
                placeholder="Username"
                required
            >
            <input
                type="password"
                name="password"
                placeholder="Password"
                required
            >
            <button>submit</button>
        
        </form>

    </article>

{% endblock %}

